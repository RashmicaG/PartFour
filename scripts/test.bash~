#!/bin/bash

INPUTFILE=$1
OUTPUTFILE=$2

#SPARC TO ASP
java -jar ~/Documents/UniSummerWork/sparc.jar ~/Documents/UniSummerWork/sparcFiles/$INPUTFILE -A -solver clingo -o ~/Documents/UniSummerWork/outputFiles/asp.txt

#ADDING MAGIC COMMANDS
(echo -n '#hide. 
	#show in/2. 
	'; cat ~/Documents/UniSummerWork/outputFiles/asp.txt) > ~/Documents/UniSummerWork/outputFiles/editedAsp.txt

#SOLVING ASP
clingo 0 ~/Documents/UniSummerWork/outputFiles/editedAsp.txt --shift  > ~/Documents/UniSummerWork/outputFiles/$OUTPUTFILE 